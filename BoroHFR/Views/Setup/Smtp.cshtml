@model BoroHFR.ViewModels.Setup.SmtpViewModel

<form method="post" class="coolform">
    <h1>SMTP szerver adatai:</h1>

    <div class="form-group py-1">
        <label>Szerver:</label>
        @Html.TextBoxFor(x => x.Server, null, new { @class = "form-control bg-dark text-light", @required = "" })
        @Html.ValidationMessageFor(x => x.Server, "", new
            {
                @class = "text-danger"
            })
    </div>
    <div class="form-group py-1">
        <label>Port:</label>
        @Html.TextBoxFor(x => x.Port, null, new { @class = "form-control bg-dark text-light", @required = "" })
        @Html.ValidationMessageFor(x => x.Port, "", new
            {
                @class = "text-danger"
            })
    </div>
    <div class="form-group py-1">
        <label>Felhasználónév:</label>
        @Html.TextBoxFor(x => x.Username, null, new { @class = "form-control bg-dark text-light", @required = "" })
        @Html.ValidationMessageFor(x => x.Username, "", new
            {
                @class = "text-danger"
            })
    </div>
    <div class="form-group py-1">
        <label>Jelszó:</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control bg-dark text-light", @required = "" })
        @Html.ValidationMessageFor(x => x.Password, "", new
            {
                @class = "text-danger"
            })
    </div>
    <div class="form-group py-1">
        <label>Küldő e-mail cím:</label>
        @Html.TextBoxFor(x => x.SenderAddress, null, new { @class = "form-control bg-dark text-light", @required = "" })
        @Html.ValidationMessageFor(x => x.SenderAddress, "", new
            {
                @class = "text-danger"
            })
    </div>
    <div class="form-group py-1">
        <label>Küldő név:</label>
        @Html.TextBoxFor(x => x.SenderName, null, new { @class = "form-control bg-dark text-light", @required = "" })
        @Html.ValidationMessageFor(x => x.SenderName, "", new
            {
                @class = "text-danger"
            })
    </div>

    @if (Model?.ConnectionFailed ?? false)
    {
        <p>Nem sikerült kapcsolódni a megadott adatokkal.</p>
    }

    <button type="submit" class="btn btn-primary">Mentés</button>
</form>