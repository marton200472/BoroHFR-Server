@{
    Layout = "_Layout";
}
<h1>Beállítások</h1>
<div class="row">
    <ul class="nav nav-pills flex-sm-column col-sm-3">
        <li class="nav-item"><a is-active-route class='nav-link' asp-controller="Settings"
                asp-action="UserData">Fiókbeállítások</a></li>
        <li class="nav-item"><a is-active-route class='nav-link' asp-controller="Settings"
                asp-action="ChangePassword">Jelszó
                módosítása</a></li>
        <li class="nav-item"><a is-active-route class='nav-link' asp-controller="Settings"
                asp-action="GroupSettings">Csoportbeállítások</a></li>
    </ul>
    <div class="offset-sm-1 col-sm-8">
        @RenderBody()
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts",required: false)
}