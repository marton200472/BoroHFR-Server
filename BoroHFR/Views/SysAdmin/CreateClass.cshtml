@model BoroHFR.ViewModels.SysAdmin.CreateClassViewModel

@{
    ViewData["Title"] = "Osztály létrehozás";
}

@using (Html.BeginForm(FormMethod.Post, new
{
    @class = "px-5 coolform",
}))
{
    <h1>Osztály létrehozása</h1>
    <div class="form-group py-1">
        <label class="form-label">Név:</label>
        @Html.TextBoxFor(x => x.Name, null, new { @class = "form-control bg-dark text-light", @required = "" })
        @Html.ValidationMessageFor(x => x.Name, "", new
            {
                @class = "text-danger"
            })
    </div>
    @if (Model?.NameUsed ?? false)
    {
        <span class="text-danger">A megadott név foglalt.</span>
    }
    <button class="btn btn-primary" type="submit">Tovább</button>
}